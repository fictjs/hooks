{
  "name": "@fictjs/hooks",
  "version": "0.1.0",
  "description": "Official hooks package for Fict",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "@fictjs/runtime": "^0.7.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "demo:dev": "vite playground",
    "demo:build": "vite build playground",
    "demo:preview": "vite preview playground",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit",
    "test:types": "tsc -p test-dts/tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test:types && npm run test && npm run build"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@fictjs/runtime": "^0.7.0",
    "@types/node": "^22.13.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.20.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  }
}
